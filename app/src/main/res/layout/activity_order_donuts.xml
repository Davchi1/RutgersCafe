<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#48FD5D93"
                                                   tools:context=".OrderDonutsActivity">

    <ListView
            android:id="@+id/donutListView"
            android:layout_width="339dp"
            android:layout_height="194dp"
            android:background="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="81dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="27dp" android:layout_marginEnd="27dp"
    ></ListView>

    <ImageView
            android:id="@+id/donutImageView"
            android:layout_width="310dp"
            android:layout_height="241dp"
            android:contentDescription="@string/description"
            app:srcCompat="@drawable/baked_donut_recipe_featured"
            android:layout_marginTop="81dp"
            android:layout_marginBottom="105dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp" android:layout_marginEnd="60dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textSize="24sp"
            tools:background="#FFFFFF" android:background="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/donutListView"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/donutImageView" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/donutListView" android:text="@string/Flavor_selection"/>

</androidx.constraintlayout.widget.ConstraintLayout>